{
  "variables": {
    "box_version": "2.0.0",

    "wolkenkit_cli_version": "2.0.0",
    "ubuntu_version": "16.04",
    "ubuntu_patch": "4",
    "ubuntu_checksum": "6a7f31eb125a0b2908cf2333d7777c82",
    "node_version": "8.11.3",
    "nvm_version": "0.33.11",

    "vagrant_cloud_access_token": "{{env `VAGRANT_CLOUD`}}"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "2048" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ]
      ],
      "http_directory" : "http",
      "boot_command": [
        "<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_domain=vm<wait>",
        " netcfg/get_hostname=wolkenkit<wait>",
        " grub-installer/bootdev=/dev/sda<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
        " -- <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 10000,
      "guest_os_type": "Ubuntu_64",
      "headless": true,
      "iso_url": "http://releases.ubuntu.com/{{user `ubuntu_version`}}/ubuntu-{{user `ubuntu_version`}}.{{user `ubuntu_patch`}}-server-amd64.iso",
      "iso_checksum": "{{user `ubuntu_checksum`}}",
      "iso_checksum_type": "md5",
      "ssh_username": "wolkenkit",
      "ssh_password": "wolkenkit",
      "ssh_timeout": "30m",
      "shutdown_command": "echo 'packer' | sudo -S shutdown -P now"
    }, {
      "type": "vmware-iso",
      "vmx_data": {
        "numvcpus": "2",
        "memsize": "2048"
      },
      "http_directory" : "http",
      "boot_command": [
        "<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_domain=vm<wait>",
        " netcfg/get_hostname=wolkenkit<wait>",
        " grub-installer/bootdev=/dev/sda<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
        " -- <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 10000,
      "guest_os_type": "ubuntu-64",
      "headless": true,
      "iso_url": "http://releases.ubuntu.com/{{user `ubuntu_version`}}/ubuntu-{{user `ubuntu_version`}}.{{user `ubuntu_patch`}}-server-amd64.iso",
      "iso_checksum": "{{user `ubuntu_checksum`}}",
      "iso_checksum_type": "md5",
      "ssh_username": "wolkenkit",
      "ssh_password": "wolkenkit",
      "ssh_timeout": "30m",
      "shutdown_command": "echo 'packer' | sudo -S shutdown -P now"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "DEBIAN_FRONTEND=noninteractive",
        "sudo apt-get install -y apt-transport-https ca-certificates curl software-properties-common python-software-properties",
        "sudo add-apt-repository -y ppa:ansible/ansible",
        "sudo apt-get update",
        "sudo apt-get -y install ansible"
      ]
    }, {
      "type": "ansible-local",
      "playbook_dir": "ansible",
      "playbook_file": "ansible/provision.yml",
      "role_paths": [
        "ansible/roles"
      ],
      "extra_arguments": [ "--extra-vars \"wolkenkit_cli_version={{user `wolkenkit_cli_version`}} node_version={{user `node_version`}} nvm_version={{user `nvm_version`}}\"" ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant"
      },
      {
        "type": "vagrant-cloud",
        "box_tag": "thenativeweb/wolkenkit",
        "access_token": "{{user `vagrant_cloud_access_token`}}",
        "version": "{{user `box_version`}}",
        "version_description": "wolkenkit CLI {{user `wolkenkit_cli_version`}} (running on Ubuntu Server {{user `ubuntu_version`}}.{{user `ubuntu_patch`}} with Node.js {{user `node_version`}})"
      }
    ]
  ]
}
